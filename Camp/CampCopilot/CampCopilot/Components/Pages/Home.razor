@page "/"
@using Microsoft.Extensions.Logging
@inject IJSRuntime JS
@inject ILogger<Home> Logger
@implements IAsyncDisposable

<div class="main">
    <div class="top-bar">
        <h3></h3>
    </div>

    <div class="chat-window" @ref="chatWindow">
        @foreach (var message in messages)
        {
            <div class="message @message.Type.ToString().ToLower()">
                @message.Content
                @if (message.IsTranscribed)
                {
                    <div class="transcribed-indicator">
                        <i class="fas fa-microphone"></i>
                    </div>
                }
            </div>
        }
    </div>
    
    <div class="input-container">
        <div class="input-wrapper">
            <input type="text" @bind="userInput" @bind:event="oninput" @onkeypress="HandleKeyPress" placeholder="Type your message..." />
            <button class="mic-button @(isRecording ? "recording" : "")" @onclick="HandleMicrophoneClick">
                <i class="fas fa-microphone"></i>
            </button>
        </div>
        <button @onclick="SendMessage">Send</button>
    </div>
</div>

<style>
    .main {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        background-color: #f8f9fa;
    }

    .top-bar {
        background-color: white;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
        height: 60px;
        display: flex;
        align-items: center;
    }

    .top-bar h3 {
        margin: 0;
        color: #212529;
    }

    .chat-window {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
        margin: 0.5rem;
        background-color: white;
        border-radius: 4px;
        border: 1px solid #dee2e6;
    }

    .message {
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        border-radius: 4px;
        max-width: 80%;
        position: relative;
    }

    .transcribed-indicator {
        position: absolute;
        top: 5px;
        right: 5px;
        font-size: 0.8em;
        color: #6c757d;
    }

    .user {
        background-color: #e3f2fd;
        margin-left: auto;
    }

    .system {
        background-color: #f5f5f5;
        margin-right: auto;
    }

    .input-container {
        background-color: white;
        padding: 1rem;
        border-top: 1px solid #dee2e6;
        height: 80px;
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .input-wrapper {
        flex: 1;
        position: relative;
        display: flex;
        align-items: center;
    }

    .mic-button {
        position: absolute;
        right: 10px;
        background: none;
        border: none;
        padding: 8px;
        cursor: pointer;
        color: #6c757d;
        transition: color 0.2s;
    }

    .mic-button:hover {
        color: #007bff;
    }

    .mic-button.recording {
        color: #dc3545;
        animation: pulse 1.5s infinite;
    }

    .input-wrapper input {
        padding-right: 40px;
    }

    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    input {
        flex: 1;
        padding: 0.75rem;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 1rem;
    }

    button {
        padding: 0.75rem 1.5rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        white-space: nowrap;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>

@code {
    private string userInput = "";
    private List<ChatMessage> messages = new();
    private ElementReference chatWindow;
    private bool isRecording = false;
    private DotNetObjectReference<Home>? objRef;
    private IJSObjectReference? module;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Starting initialization...");
            objRef = DotNetObjectReference.Create(this);
            Logger.LogInformation("Created DotNetObjectReference");
            
            try
            {
                module = await JS.InvokeAsync<IJSObjectReference>("import", "./js/audioRecorder.js");
                Logger.LogInformation("Successfully loaded audio module");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to load audio module");
                throw;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error in OnInitializedAsync");
            throw;
        }
    }

    private async Task HandleMicrophoneClick()
    {
        try
        {
            Logger.LogInformation("HandleMicrophoneClick called, isRecording: {IsRecording}", isRecording);
            
            if (module == null)
            {
                Logger.LogError("Module is null, attempting to reload");
                module = await JS.InvokeAsync<IJSObjectReference>("import", "./js/audioRecorder.js");
            }

            if (!isRecording)
            {
                Logger.LogInformation("Starting recording...");
                isRecording = true;
                await module!.InvokeVoidAsync("startRecording", objRef, 5000);
                Logger.LogInformation("Recording started successfully");
            }
            else
            {
                Logger.LogInformation("Stopping recording...");
                isRecording = false;
                await module!.InvokeVoidAsync("stopRecording");
                Logger.LogInformation("Recording stopped successfully");
            }
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error in HandleMicrophoneClick");
            isRecording = false;
            StateHasChanged();
            throw;
        }
    }

    [JSInvokable]
    public async Task OnSilenceDetected()
    {
        try
        {
            Logger.LogInformation("Silence detected, stopping recording");
            isRecording = false;
            await module!.InvokeVoidAsync("stopRecording");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling silence");
            isRecording = false;
            StateHasChanged();
        }
    }

    [JSInvokable]
    public async Task OnTranscriptionReceived(string text)
    {
        try
        {
            Logger.LogInformation("Transcription received: {Text}", text);
            if (!string.IsNullOrWhiteSpace(text))
            {
                messages.Add(new ChatMessage { Content = text, Type = MessageType.User, IsTranscribed = true });
                await ScrollToBottom();
                
                string response = await GetSystemResponse(messages);
                messages.Add(new ChatMessage { Content = response, Type = MessageType.System });
                await ScrollToBottom();
            }
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling transcription");
            StateHasChanged();
        }
    }

    [JSInvokable]
    public void OnRecordingError(string error)
    {
        Logger.LogError("Recording error: {Error}", error);
        isRecording = false;
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        try
        {
            if (module is not null)
            {
                await module.DisposeAsync();
                Logger.LogInformation("Module disposed successfully");
            }
            objRef?.Dispose();
            Logger.LogInformation("Resources disposed successfully");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error disposing resources");
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput))
            return;

        messages.Add(new ChatMessage { Content = userInput, Type = MessageType.User });
        string tempInput = userInput;
        userInput = "";
        
        string response = await GetSystemResponse(messages);
        messages.Add(new ChatMessage { Content = response, Type = MessageType.System });
        
        await ScrollToBottom();
        StateHasChanged();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendMessage();
        }
    }

    private async Task ScrollToBottom()
    {
        await JS.InvokeVoidAsync("scrollToBottom", chatWindow);
    }

    private async Task<string> GetSystemResponse(List<ChatMessage> chatHistory)
    {
        await Task.Delay(500);
        return $"System response to: {chatHistory.Last().Content}";
    }

    private class ChatMessage
    {
        public string Content { get; set; } = "";
        public MessageType Type { get; set; }
        public bool IsTranscribed { get; set; }
    }

    private enum MessageType
    {
        User,
        System
    }
}
