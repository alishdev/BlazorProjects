<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestLLM"
             x:Class="TestLLM.Settings"
             x:Name="ThisSettings"
             BackgroundColor="Transparent">

    <ScrollView>
        <VerticalStackLayout x:Name="SettingsCheckboxes" Spacing="16">
            <Label Text="ðŸ¤– Select LLMs" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="#1E293B"
                   Margin="0,0,0,8" />
            
            <Label Text="Choose which AI models to enable in your tabs" 
                   FontSize="14"
                   TextColor="#64748B"
                   Margin="0,0,0,16" />
            
            <!-- Max Tokens Control -->
            <Border BackgroundColor="#F8FAFC" 
                    Stroke="#E2E8F0" 
                    StrokeThickness="1" 
                    Padding="16,12"
                    Margin="0,0,0,16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Max Tokens" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#1E293B" />
                    <local:DropDown x:Name="MaxTokensDropDown"
                                    ItemsSource="{Binding MaxTokensOptions, Source={x:Reference Name=ThisSettings}}"
                                    SelectedItem="{Binding SelectedMaxTokens, Source={x:Reference Name=ThisSettings}, Mode=TwoWay}" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Functions Group -->
            <Border BackgroundColor="#F8FAFC" 
                    Stroke="#E2E8F0" 
                    StrokeThickness="1" 
                    Padding="16,12"
                    Margin="0,0,0,16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="ðŸ”§ Functions" 
                           FontSize="16" 
                           FontAttributes="Bold"
                           TextColor="#1E293B" />
                    
                    <Button x:Name="MergeResponsesButton"
                            Text="Merge Responses"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="16,12"
                            Clicked="OnMergeResponsesClicked" />
                </VerticalStackLayout>
            </Border>
            
            <!-- Checkboxes will be generated here -->
        </VerticalStackLayout>
    </ScrollView>

</ContentView> 