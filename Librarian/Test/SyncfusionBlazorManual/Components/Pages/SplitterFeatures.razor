@page "/splitter-features"
@rendermode InteractiveServer

<PageTitle>Splitter</PageTitle>
<SfSplitter ID="splitter1" Height="100vh" Width="100%" Orientation="Syncfusion.Blazor.Layouts.Orientation.Horizontal" SeparatorSize="4">
    <SplitterPanes>
        <SplitterPane Size="40%" Min="600px">
            <ContentTemplate>
                <SfFileManager TValue="FileManagerDirectoryContent" Width="100%" Height="100%">
                    <FileManagerAjaxSettings Url="/api/FileManager/FileOperations"
                                             UploadUrl="/api/FileManager/Upload"
                                             DownloadUrl="/api/FileManager/Download"
                                             GetImageUrl="/api/FileManager/GetImage">
                    </FileManagerAjaxSettings>
                </SfFileManager>
            </ContentTemplate>
        </SplitterPane>
        <SplitterPane Size="60%" Min="60px">
            <ContentTemplate>
                <div class='splitter-default-content'>
                    <div>
                        Right pane
                        <div class="panetext">size: 60%</div>
                        <div class="panetext">min: 60px</div>
                    </div>
                </div>
            </ContentTemplate>
        </SplitterPane>
    </SplitterPanes>
</SfSplitter>
