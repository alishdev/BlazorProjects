<ContentPage x:Class="Librarian.FileViewer.Components.Pages.FileViewer"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Librarian.FileViewer.Components.Pages"
             xmlns:components="clr-namespace:Librarian.FileViewer.Components"
             Title="Librarian File Viewer">

    <ContentPage.Resources>
        <local:IconConverter x:Key="IconConverter"/>
        <local:ToggleIconConverter x:Key="ToggleIconConverter"/>
        <local:ToggleVisibilityConverter x:Key="ToggleVisibilityConverter"/>
        <local:ChildrenVisibilityConverter x:Key="ChildrenVisibilityConverter"/>
        <local:FileTypeDisplayConverter x:Key="FileTypeDisplayConverter"/>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="White" Padding="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Grid.Column="0" 
                   Text="Librarian File Viewer" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="#333333"
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="1" 
                    x:Name="RefreshButton"
                    Text="Refresh" 
                    Clicked="RefreshButton_Click"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    Padding="16,8"
                    FontAttributes="Bold"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" BackgroundColor="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- File Hierarchy Panel -->
            <Grid Grid.Column="0" BackgroundColor="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Border Grid.Row="0" BackgroundColor="#F8F9FA" Padding="24,16">
                    <Label Text="File Hierarchy" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="#333333"/>
                </Border>

                <!-- Tree View -->
                <ScrollView Grid.Row="1">
                    <CollectionView x:Name="TreeItemsControl">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <components:FileTreeNode Item="{Binding}" OnFileSelected="{Binding Source={RelativeSource AncestorType={x:Type local:FileViewer}}, Path=OnFileSelected}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </Grid>

            <!-- File Content Panel -->
            <Grid Grid.Column="1" BackgroundColor="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Border Grid.Row="0" BackgroundColor="#F8F9FA" Padding="24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0" 
                               Text="File Preview" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               TextColor="#333333"
                               VerticalOptions="Center"/>
                        
                        <StackLayout Grid.Column="1" 
                                     Orientation="Horizontal" 
                                     VerticalOptions="Center">
                            <Label x:Name="FilePathTextBlock" 
                                   FontFamily="Consolas" 
                                   BackgroundColor="#F0F0F0" 
                                   Padding="6,2" 
                                   VerticalOptions="Center"/>
                            <Label x:Name="FileTypeTextBlock" 
                                   BackgroundColor="#007BFF" 
                                   TextColor="White" 
                                   Padding="8,2" 
                                   FontSize="10" 
                                   FontAttributes="Bold"
                                   Margin="8,0,0,0"
                                   VerticalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Row="1">
                    <!-- Loading Indicator -->
                    <Grid x:Name="LoadingGrid" 
                          BackgroundColor="White" 
                          IsVisible="False">
                        <Label Text="Loading file content..." 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               TextColor="#666666"/>
                    </Grid>

                    <!-- No Selection -->
                    <Grid x:Name="NoSelectionGrid" 
                          BackgroundColor="White">
                        <Label Text="Select a file from the hierarchy to view its content." 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               TextColor="#666666"
                               HorizontalTextAlignment="Center"/>
                    </Grid>

                    <!-- PDF Viewer -->
                    <WebView x:Name="PdfWebBrowser" 
                             IsVisible="False"/>

                    <!-- Text Content -->
                    <ScrollView x:Name="TextContentScrollViewer" 
                               IsVisible="False">
                        <Editor x:Name="TextContentTextBox" 
                                IsReadOnly="True"
                                FontFamily="Consolas"
                                FontSize="13"
                                BackgroundColor="#F8F9FA"/>
                    </ScrollView>

                    <!-- Image Content -->
                    <ScrollView x:Name="ImageContentScrollViewer" 
                               IsVisible="False">
                        <StackLayout>
                            <Image x:Name="ImageContentImage" 
                                   Aspect="AspectFit"
                                   Margin="16"/>
                            <Label x:Name="ImageInfoTextBlock" 
                                   FontFamily="Consolas" 
                                   FontSize="12" 
                                   TextColor="#6C757D"
                                   Margin="16,8,16,16"/>
                        </StackLayout>
                    </ScrollView>

                    <!-- Binary Content -->
                    <ScrollView x:Name="BinaryContentScrollViewer" 
                               IsVisible="False">
                        <Label x:Name="BinaryInfoTextBlock" 
                               FontFamily="Consolas" 
                               FontSize="12" 
                               TextColor="#6C757D"
                               Margin="16"/>
                    </ScrollView>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ContentPage> 