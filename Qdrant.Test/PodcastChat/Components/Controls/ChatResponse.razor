<div class="chat-response d-flex align-items-start gap-2 p-3">
    <!-- icon -->
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-text flex-shrink-0" viewBox="0 0 16 16">
        <path d="M2.678 11.894a1 1 0 0 1 .287.801 11 11 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8 8 0 0 0 8 14c3.996 0 7-2.807 7-6s-3.004-6-7-6-7 2.808-7 6c0 1.468.617 2.83 1.678 3.894m-.493 3.905a22 22 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a10 10 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9 9 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105"/>
        <path d="M4 5.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8m0 2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5"/>
    </svg>
    <!-- response content -->
    <div class="response-content">
        <div class="response-text mb-2 fs-5">
            @Response
        </div>
        
        @if (AudioFiles?.Any() == true)
        {
            <div class="audio-files mb-2">
                @foreach (var audio in AudioFiles)
                {
                    <div class="mb-2">
                        <audio controls class="w-100">
                            <source src="@audio.FileUrl" type="audio/wav">
                            Your browser does not support the audio element.
                        </audio>
                        <div class="text-muted small">@audio.Caption</div>
                    </div>
                }
            </div>
        }
        
        @if (Links?.Any() == true)
        {
            <div class="response-links">
                <ul class="list-unstyled">
                    @foreach (var link in Links)
                    {
                        <li>
                            <a href="@link.LinkUrl" class="text-decoration-none">
                                <i class="bi bi-link-45deg"></i>
                                @link.Caption
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Response { get; set; } = "";

    [Parameter]
    public List<LinkItem> Links { get; set; } = new();

    [Parameter]
    public List<AudioItem> AudioFiles { get; set; } = new();

    public class LinkItem
    {
        public string Caption { get; set; } = "";
        public string LinkUrl { get; set; } = "";
    }

    public class AudioItem
    {
        public string Caption { get; set; } = "";
        public string FileUrl { get; set; } = "";
    }
} 